--Trigger ngày đăng kí hội viên
CREATE OR REPLACE TRIGGER AUTO_DANGKI_HOIVIEN BEFORE
  INSERT OR
  UPDATE ON HOIVIEN FOR EACH ROW BEGIN :NEW.NGAYDANGKY := SYSDATE();
END;
--TRIGGER NGÀY VÀO LÀM
