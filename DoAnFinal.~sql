--TÌM MÃ SUẤT PHIM
CREATE OR REPLACE PROCEDURE FIND_ID_SP
    (
      V_TENPHIM IN PHIM.TENPHIM%TYPE
    )
  IS
    V_MASUATPHIM VARCHAR(7);
  BEGIN
    SELECT MASUATPHIM
    INTO V_MASUATPHIM
    FROM PHIM,
      SUATPHIM
    WHERE PHIM.MAPHIM=SUATPHIM.MAPHIM
    AND TENPHIM      =V_TENPHIM;
  END;
